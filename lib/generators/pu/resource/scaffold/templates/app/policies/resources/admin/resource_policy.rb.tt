# frozen_string_literal: true

module Resources
  module Admin
    class <%= resource_name %>Policy < ApplicationPolicy
      include Resources::<%= resource_name %>Policy
      include Resources::Admin::ResourcePolicy

      class Scope
        include Pu::Policy::Initializer

        def resolve
          <%= resource_name %>
            .all
          <%- if entity_assoc -%>
            .includes(:<%= entity_assoc.name %>)
          <%- end -%>
        end
      end
    end
  end
end
